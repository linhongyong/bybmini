.bg{
  height: 130px;
  width: 100%;
  background: linear-gradient(#FF6E64, #fff);  
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: -1;
}
.headdiv{
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 80%;
  border-top-right-radius: 80%;
  background-color: white;
  margin-top: 180rpx;
}
.headpic-name{
  transform: translateY(-35%);
}
.portrait{
  height: 160rpx;
  width: 160rpx;
}
.portrait image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: #666 0px 0px 5px;
}
.demo__icon {
  position: absolute;
  top: 40rpx;
  right: 60rpx;
}




