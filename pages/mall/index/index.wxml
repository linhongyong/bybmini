<zan-dialog id="zan-button-dialog" bindgetuserinfo="getuserinfo"></zan-dialog>
<zan-toptips id="zan-toptips" content="{{ content }}" is-show="{{ $zanui.toptips.show }}"/> 
<import src="../../../wxml/mall_good_card.wxml"/>

<view class='display-flex-center-between bottom-line position-f bg-white' style='padding:20rpx;'>
  <view class='margin-h-10 padding-10-15 font-ccc display-flex-center' style='background-color:#f9f9f9; width:600rpx;border-radius:6rpx;'>
    <text class='iconfont icon-search' style='font-size:40rpx'></text>
    <text class='margin-l-10'>要你想要</text>
  </view>
  <view class='margin-h-10 text-c font-ccc' >
    <view class='iconfont icon-cart' style='font-size:40rpx'></view>
  </view>
</view> 
<!--分类  -->
<view class='scroll_box bg-white'>
  <scroll-view scroll-x style="" bindscroll="scroll">
    <view class='menus display-ib padding-10-20' wx:for="{{categorys}}" wx:key="{{index}}">
      <view class='menu-item'>
        <image class='ng-fill' src='{{ item.img }}' mode=''></image>
      </view>
      <view class='font-13'>{{ item.name }}</view>
    </view>
  </scroll-view>
</view>

<!--轮播  -->
<swiper class='swiper bg-white' style='height:375rpx' autoplay="true" indicator-dots indicator-color="#ccc" indicator-active-color="#fff">
  <swiper-item wx:for="{{ banners }}" wx:key="{{index}}">
    <image src="{{ item.img_url }}" bindtap='imghref' data-index="{{index}}" class="slide-image" style="width:100%; height:100%" mode="aspectFill" />
  </swiper-item>
</swiper>

<!--租赁  -->
<view class='padding-h-20 padding-t-10 font-18 bg-white font-bold'>租赁更时尚</view>
<view class='scroll_box bg-white'>
  <scroll-view scroll-x style="" bindscroll="scroll">
    <view class='menus display-ib padding-10-20' wx:for="{{categorys}}" wx:key="{{index}}">
      <view class='menu-item'>
        <image class='ng-fill' src='{{ item.img }}' mode=''></image>
      </view>
      <view class='font-13'>{{ item.name }}</view>
    </view>
  </scroll-view>
</view>

<!--热门推荐  -->
<view class='padding-10-20 font-18 bg-white font-bold margin-t-10'>热门推荐</view>
<view class='two-column-list bg-white'>
  <view class='item' wx:for="{{ goods }}" wx:key="{{item}}">
    <template is="mall_good_card" data="{{...item}}"/>
  </view>
</view>

